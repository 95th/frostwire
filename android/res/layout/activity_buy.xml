<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent">
    <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/activity_buy_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/basic_gray">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      xmlns:frostwire="http://schemas.android.com/apk/res-auto"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:background="@color/basic_gray"
        >
            <com.frostwire.android.gui.views.ProductCardView
                    android:id="@+id/activity_buy_product_card_30_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    frostwire:product_card_title_bold="@string/thirty_days"
                    frostwire:product_card_title_normal="@string/ad_free"
                    frostwire:product_card_price="$0.99"
                    frostwire:product_card_description="@string/dummy_content_description"
                    frostwire:product_card_hint_button_visible="false"/>

            <com.frostwire.android.gui.views.ProductCardView
                    android:id="@+id/activity_buy_product_card_1_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    frostwire:product_card_selected="true"
                    frostwire:product_card_title_bold="@string/one_year"
                    frostwire:product_card_title_normal="@string/ad_free"
                    frostwire:product_card_price="$5.94"
                    frostwire:product_card_description="@string/dummy_content_description"
                    frostwire:product_card_hint_button_visible="true"
                    frostwire:product_card_hint_button_caption="@string/best_value"/>

            <com.frostwire.android.gui.views.ProductPaymentOptionsView
                    android:id="@+id/activity_buy_product_payment_options_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            <com.frostwire.android.gui.views.ProductCardView
                    android:id="@+id/activity_buy_product_card_6_months"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    frostwire:product_card_title_bold="@string/six_months"
                    frostwire:product_card_title_normal="@string/ad_free"
                    frostwire:product_card_price="$4.45"
                    frostwire:product_card_description="@string/dummy_content_description"
                    frostwire:product_card_hint_button_visible="false"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:id="@+id/activity_buy_interstitial_linear_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@color/frostwire_light_blue" android:weightSum="1">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <View android:id="@+id/activity_buy_interstitial_click_area_1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.0"/>
            <ImageButton android:id="@+id/activity_buy_interstitial_dismiss_button"
                         android:src="@drawable/ic_ab_close_clear_cancel"
                         android:background="@color/transparent"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_weight="0"
                         android:paddingTop="10dp"
                         android:paddingRight="10dp"
                         android:paddingBottom="10dp"
                         android:layout_gravity="center"/>
        </LinearLayout>

        <TextView android:id="@+id/activity_buy_interstitial_support_frostwire"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="30dp"
                  android:gravity="center_horizontal"
                  android:text="@string/support_frostwire"
                  android:textStyle="bold"
                  android:textSize="@dimen/text_size_xx_large"/>

        <TextView android:id="@+id/activity_buy_interstitial_random_pitch"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingBottom="20dp"
                  android:paddingTop="10dp"
                  android:gravity="center_horizontal"
                  android:text="@string/save_bandwidth"
                  android:textSize="@dimen/text_size_xx_large"/>

        <TextView android:id="@+id/activity_buy_interstitial_remove_ads"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="20dp"
                  android:paddingBottom="30dp"
                  android:gravity="center"
                  android:textColor="@color/basic_white"
                  android:textStyle="bold"
                  android:textSize="@dimen/text_size_dayum"
                  android:text="@string/remove_ads"/>

        <ImageButton android:id="@+id/activity_buy_interstitial_frostwire_logo"
                     android:layout_width="match_parent"
                     android:layout_height="150dp"
                     android:scaleType="fitCenter"
                     android:layout_gravity="center_horizontal"
                     android:background="@color/transparent"
                     android:src="@drawable/app_icon" android:layout_weight="0.07"/>

        <TextView android:id="@+id/activity_buy_interstitial_ad_free"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:layout_gravity="center_horizontal"
                  android:textSize="@dimen/text_size_xx_large"
                  android:background="@drawable/activity_buy_interstitial_ad_free_button_background"
                  android:paddingTop="20dp"
                  android:paddingRight="30dp"
                  android:paddingLeft="30dp"
                  android:paddingBottom="20dp"
                  android:text="@string/ad_free"/>

    </LinearLayout>
</FrameLayout>