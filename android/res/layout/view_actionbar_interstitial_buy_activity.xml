<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              style="@style/ActionBar"
              android:layout_margin="0dp"
              android:padding="0dp"
              android:weightSum="1.0">
    <TextView android:id="@+id/view_actionbar_interstitial_buy_activity_title"
              android:layout_weight="1.0"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/remove_ads"
              android:textColor="@color/basic_white"
              android:layout_marginLeft="10dp"
              android:layout_gravity="center_vertical"
              style="@style/ActionBar.TitleTextStyle"/>
    <ImageButton android:id="@+id/view_actionbar_interstitial_buy_activity_dismiss_button"
                 android:src="@drawable/ic_ab_close_clear_cancel"
                 android:background="@color/transparent"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="0"
                 android:paddingRight="5dp"
                 android:layout_gravity="center_vertical|right"/>
</LinearLayout>