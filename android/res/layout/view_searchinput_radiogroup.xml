<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_search_input_radiogroup_file_type"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background_dark"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/view_search_input_radio_audio"
        style="@style/SearchInputFileTypeButton" />

    <RadioButton
        android:id="@+id/view_search_input_radio_videos"
        style="@style/SearchInputFileTypeButton" />

    <RadioButton
        android:id="@+id/view_search_input_radio_pictures"
        style="@style/SearchInputFileTypeButton" />

    <RadioButton
        android:id="@+id/view_search_input_radio_applications"
        style="@style/SearchInputFileTypeButton" />

    <RadioButton
        android:id="@+id/view_search_input_radio_documents"
        style="@style/SearchInputFileTypeButton" />

    <RadioButton
        android:id="@+id/view_search_input_radio_torrents"
        style="@style/SearchInputFileTypeButton" />

</RadioGroup>
