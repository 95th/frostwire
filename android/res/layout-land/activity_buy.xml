<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent" android:layout_width="match_parent">
    <include layout="@layout/activity_buy_products_layout"/>

    <LinearLayout android:id="@+id/activity_buy_interstitial_linear_layout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:background="@color/basic_blue_highlight" android:weightSum="1">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
            <View android:id="@+id/activity_buy_interstitial_click_area_1"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1.0"/>
            <ImageButton android:id="@+id/activity_buy_interstitial_dismiss_button"
                         android:src="@drawable/full_screen_close"
                         android:background="@color/transparent"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_weight="0"
                         android:layout_gravity="center"
                         style="@style/BuyNoAdsAdText.AdFree"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/warning_red"

            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:layout_marginTop="-25dp">

                <ImageButton android:id="@+id/activity_buy_interstitial_frostwire_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:src="@drawable/app_icon"
                    android:background="@color/transparent"
                    android:paddingRight="20dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/activity_buy_interstitial_support_frostwire"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:gravity="center_horizontal"
                              android:text="@string/support_frostwire"
                              android:textSize="28dp"
                              style="@style/BuyNoAdsAdText.Support"/>

                    <TextView android:id="@+id/activity_buy_interstitial_random_pitch"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="5dp"
                              android:text="@string/save_bandwidth"
                              android:gravity="center"
                              android:textAllCaps="false"
                              android:textSize="25sp"
                              style="@style/BuyNoAdsAdText.Project"/>
                </LinearLayout>
            </LinearLayout>

            <TextView android:id="@+id/activity_buy_interstitial_remove_ads"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="@string/remove_ads"
                      android:paddingTop="10dp"
                      android:paddingBottom="40dp"
                      android:gravity="center"
                      style="@style/BuyNoAdsAdText.Remove"
                      android:visibility="gone"/>

            <TextView android:id="@+id/activity_buy_interstitial_ad_free"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_horizontal"
                      android:background="@drawable/activity_buy_interstitial_ad_free_button_background"
                      android:text="@string/remove_ads"
                      android:layout_marginTop="30dp"
                      style="@style/BuyNoAdsAdText.AdFree"/>
        </LinearLayout>


    </LinearLayout>
</FrameLayout>